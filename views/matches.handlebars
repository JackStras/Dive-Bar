<!-- JS form for updated profile results -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('search-form').addEventListener('submit', function (event) {
            event.preventDefault();

            
            const selectedOptions = {
                photography: document.getElementById('check1').checked,
                active: document.getElementById('check2').checked,
                efr: document.getElementById('check3').checked,
                activeO2: document.getElementById('check4').checked,
                activeDM: document.getElementById('check5').checked,
                activeInstructor: document.getElementById('check6').checked,
                gasMix: document.getElementById('dropdown1').value,
                certification: document.getElementById('dropdown3').value
            };

            // function to update profile results with selections
            updateProfileResults(selectedOptions);
        });

        // update the profile results based on selected options
        function updateProfileResults(options) {
            const profileResultsDiv = document.getElementById('profile-results');

            // Clear out existing 
            profileResultsDiv.innerHTML = '';

            // create new profile views
            for (let i = 1; i <= 12; i++) {
                const profileView = createProfileView(`FirstName${i} LastName${i}`, `Place of origin ${i}`, `I love to XYZ ${i}`);
                profileResultsDiv.appendChild(profileView);
            }
        }

        // create a new profile view with given data
        function createProfileView(fullName, location, aboutMe) {
            const newProfileView = document.createElement('div');
            newProfileView.classList.add('profile-view');

            //  replace profile data with actual data
            const profileImageSrc = `profile${Math.floor(Math.random() * 5) + 1}-image.jpg`; 
            // Random profile image not in folders 

            // Update the content of the new profile view
            newProfileView.innerHTML = `
                <h2 class="heading">${fullName}</h2>
                <div class="content">
                    <img src="${profileImageSrc}" alt="${fullName}'s Profile Image">
                    <h3>${fullName}</h3>
                    <p>Location: ${location}</p>
                    <p>About Me: ${aboutMe}</p>
                </div>
            `;

            return newProfileView;
        }
    });
</script>

