<div class="UserName">
  {{#if loggedIn}}
  <ul class="list-group">
    <li class="list-group-item custom_li">
      <h1>{{user.username}}</h1>
    </li>
    <li class="list-group-item custom_li">Certifications: {{user.certifications}}</li>
    <li class="list-group-item custom_li">Gas Mixes: {{user.gas_mixes}}</li>
    <li class="list-group-item custom_li">Total Dives: {{user.ow_dive_totals}}</li>
    <li class="list-group-item custom_li">Photographer: {{user.photography}}</li>
    <li class="list-group-item custom_li">Active Emergency First Responder: {{user.active_efr}}</li>
    <li class="list-group-item custom_li">Active O2: {{user.active_O2}}</li>
    <li class="list-group-item custom_li">Active Dive Master: {{user.active_dm}}</li>
    <li class="list-group-item custom_li">Active Instructor: {{user.active_instructor}}</li>
  </ul>
  {{/if}}
</div>




<form id="commentForm">
  <div class="col-md-6 comments" id="comments">
    <h2>Continue the conversation by leaving a reply!</h2>
    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"
      id="dialogue">
  </div>
  <input class="btn btn-primary" type="submit" value="Comment" id="submitComment">
  {{#if user.threads.length}}
  <h3>Comments:</h3>
  {{#each user.threads as |thread|}}
  <ul class="list-group">
    <a href="/user_profile/{{thread.poster_id}}">{{thread.poster}}</a>
    <li class="list-group-item">{{thread.comment}}
      <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg"></span>
        <input type="text" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-lg">
      </div>
    </li>
  </ul>
</form>
{{/each}}


{{/if}}

<p id="userComment" data-userId="{{user.id}}"></p>
<p id="loggedInUser" data-loggedUser="{{user.username}}"></p>
<p id="loggedUserId" data-loggedId="{{user.id}}"></p>
<script src="/js/comments.js"></script>